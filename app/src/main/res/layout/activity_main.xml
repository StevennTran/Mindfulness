<?xml version="1.0" encoding="utf-8"?>
<android.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:columnCount="2"
    android:rowCount="5"
    android:orientation="vertical">

    <TextView
        android:id="@+id/label_water"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:text="Track your water intake" />

    <ImageButton
        android:id="@+id/water_tracker"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_row="0"
        android:layout_column="0"
        android:adjustViewBounds="true"
        android:backgroundTint="#03A9F4"
        android:onClick="onClickWater"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/water_glass" />

    <ImageButton
        android:id="@+id/mood_tracker"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_row="1"
        android:layout_column="0"
        android:adjustViewBounds="true"
        android:backgroundTint="#03A9F4"
        android:onClick="onClickMood"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/calm_face" />

    <TextView
        android:id="@+id/label_mood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:text="Track your mood state" />

    <ImageButton
        android:id="@+id/meditate"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_row="2"
        android:layout_column="0"
        android:adjustViewBounds="true"
        android:backgroundTint="#03A9F4"
        android:onClick="onClickMeditate"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/meditating" />

    <TextView
        android:id="@+id/label_meditate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:text="Practice meditation and mindfulness" />

    <ImageButton
        android:id="@+id/sleep"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_row="3"
        android:layout_column="0"
        android:adjustViewBounds="true"
        android:backgroundTint="#2196F3"
        android:onClick="onClickSleep"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/bed" />

    <TextView
        android:id="@+id/label_sleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="1"
        android:text="Build and maintain a healthy sleep schedule" />

</android.widget.GridLayout>